<UserControl x:Class="Ribbon.View.ManageNewSalesOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             
              xmlns:modelView="clr-namespace:Ribbon.ViewModel"
              xmlns:newSalesOrderAddSection="clr-namespace:Ribbon.View.Sales.sales_order.new_sale_order">

    <UserControl.Resources>
        <modelView:ManageSalesOrder x:Key="manageSalesOrder"/>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Background="{StaticResource Sales}" DataContext="{StaticResource manageSalesOrder}">
        <StackPanel>
            <Label Content="Search" FontSize="20" Foreground="{StaticResource Sales_ForeBackground}" FontWeight="Bold" Margin="10 0 0 -10"/>

            <newSalesOrderAddSection:NewSalesOrderSearch Margin="3 7 3 5"/>
            <newSalesOrderAddSection:NewSalesOrder Margin="3 7 3 5"/>
        </StackPanel>
        <newSalesOrderAddSection:NewSalesOrderTabs />
    </StackPanel>

</UserControl>
