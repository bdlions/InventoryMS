<UserControl x:Class="Ribbon.View.ManageNewCustomer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              xmlns:modelView="clr-namespace:Ribbon.ViewModel"
              xmlns:newCustomerAddSection="clr-namespace:Ribbon.View.Sales.customer.new_customer">

    <UserControl.Resources>
        <modelView:ManageCustomerList x:Key="manageCustomerList"/>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Background="{StaticResource Sales}" DataContext="{StaticResource manageCustomerList}">
        <StackPanel>
            <Label Content="Search" FontSize="20" Foreground="{StaticResource Sales_ForeBackground}" FontWeight="Bold" Margin="10 0 0 -10"/>
            <newCustomerAddSection:NewCustomerSearch Margin="3 7 3 5"/>
            <newCustomerAddSection:CustomerName Margin="3 7 3 5"/>
        </StackPanel>
        <newCustomerAddSection:CustomerInfoTabs />
    </StackPanel>
</UserControl>
